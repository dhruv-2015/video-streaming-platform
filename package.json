{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:docker": "pnpm run docker:api && pnpm run docker:web",
    "docker:api": "docker buildx build -t test:api --target apirunner  .",
    "docker:web": "docker buildx build -t test:web --target webrunner  .",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@workspace/web",
    "dev:api": "turbo dev --filter=@workspace/api",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20"
  }
}
