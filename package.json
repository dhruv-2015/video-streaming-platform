{
  "name": "shadcn-ui-monorepo",
  "version": "1",
  "private": true,
  "scripts": {
    "build": "env-cmd -f .env.local turbo build",
    "build:docker": "pnpm run docker:api && pnpm run docker:web && pnpm run docker:transcoder",
    "start": "pnpx concurrently \"pnpm dev:api\"  \"pnpm dev:web\"  \"pnpm run dev --filter=@workspace/transcoder\"",
    "start:docker": "pnpm run docket:start",
    "docker:api": "docker build -t dhruv2015/rpi:video-streaming-platform-amd64-api --platform linux/amd64 --target apirunner .",
    "docker:web": "docker build -t dhruv2015/rpi:video-streaming-platform-amd64-web --platform linux/amd64 --target webrunner .",
    "docker:transcoder": "docker build -t dhruv2015/rpi:video-streaming-platform-amd64-transcoder --platform linux/amd64 --target transcoderrunner .",
    "docket:start": "docker-compose up",
    "dev": "env-cmd -f .env.local turbo dev --global-deps=\".env.*\"",
    "dev:web": "env-cmd -f .env.local turbo dev --global-deps=\".env.*\" --filter=@workspace/web",
    "dev:api": "env-cmd -f .env.local turbo dev --global-deps=\".env.*\" --filter=@workspace/api",
    "db:generate": "turbo db:generate --filter=@workspace/database",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "env-cmd": "^10.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.4.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "supportedArchitectures": {
      "os": [
        "win32",
        "linux"
      ],
      "cpu": [
        "x64",
        "arm64"
      ],
      "libc": [
        "glibc"
      ]
    }
  }
}