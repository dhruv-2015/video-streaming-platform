{
  "name": "@workspace/database",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "files": [
    "dist",
    "package.json",
    "generated"
  ],
  "version": "0.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "private": true,
  "scripts": {
    "predev": "pnpm run build",
    "db:generate": "prisma generate",
    "build": "rimraf generated && rimraf dist && pnpm run db:generate && tsup --onSuccess \"tsc\""
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@workspace/env": "workspace:*",
    "@workspace/logger": "workspace:*",
    "ioredis": "^5.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.10",
    "@workspace/typescript-config": "workspace:*",
    "prisma": "^6.2.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.6",
    "typescript": "^5.6.3"
  }
}
