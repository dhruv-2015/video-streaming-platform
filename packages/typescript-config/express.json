{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
      "rootDir": "${configDir}/src",
      "outDir": "${configDir}/dist",
      "paths": {
        "@/*": ["./src/*"]
      },
      "declarationMap": false,
      "declaration": false
    },
    "include": ["${configDir}/src/**/*.ts"],
    "exclude": ["${configDir}/node_modules", "${configDir}/dist"]
  }