{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [".env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/**", "generated/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      // "dependsOn": ["^predev"],
      "persistent": true,
      "cache": false
    },
    "predev": {
      "cache": true,
      "dependsOn": ["^predev"],
      "persistent": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "API_URL",
    "PUBLIC_URL",
    "REDIS_URL",
    "AUTH_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "PORT",
    "S3_ENDPOINT",
    "S3_REGION",
    "S3_ACCESS_KEY_ID",
    "S3_ACCESS_KEY_SECRET",
    "S3_FILES_BUCKET",
    "S3_VIDEO_BUCKET",
    "S3_PUBLIC_ENDPOINT",
    "S3_PUBLIC_VIDEO_ENDPOINT",
    "CHROMADB_URL"
  ]
}
