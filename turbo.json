{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [".env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/**", "generated/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^predev"],
      "cache": false,
      "persistent": true
    },
    "predev": {
      "cache": false,
      "persistent": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "PUBLIC_NEXT_API_URL",
    "REDIS_URL",
    "AUTH_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "PORT"
  ]
}